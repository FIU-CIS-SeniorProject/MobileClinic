 <div class="block">
<% provide(:title, 'All Patients') %>
<div class="grid">
              
    <div class="grid-title">
     <div class="pull-left">
        <div class="icon-title"><i class="icon-user"></i></div>
        <span>Patients</span> 
        <div class="clearfix"></div>
     </div>
    <div class="clearfix"></div>   
    </div>
  
    <div class="grid-content overflow">
      
      <table class="table table-bordered table-mod-2" id="datatable_1">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Villiage Name</th>
          <th></th>
        </tr>
      </thead>
       <tbody>
      <% @patients.each do |patient| %>
  <tr>
      <td><%= patient.firstName%></td>
      <td><%= patient.familyName%></td>
      <td><%= patient.villageName%></td>
      <td><%= link_to "View", patient %></td>
      <!-- <td class="hidden-mobile"><span class="s_green">Approved</span></td> -->
  </tr>
  <% end %> 
</tbody>
    </table>
</div>
        