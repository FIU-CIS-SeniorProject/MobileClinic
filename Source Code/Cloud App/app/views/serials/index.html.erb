<% provide(:title, 'All Serial Records') %>
<div class="block">
	<div class="grid">
		<div class="grid-title">
			<div class="pull-left">
				<span class="glyphicon glyphicon-align-justify"></span>
			</div>
			<div class="pull-left" style="padding-top: 10px;">
				<span>Serials</span>
			</div>
		</div>
		<div class="grid-content overflow">
			<table class="table table-bordered" id="datatable_serial">
				<thead>
					<tr>
						<th> Serial Number </th>
						<th> Charity </th>
						<th> Status </th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% (@serials).each do |serial| %>
					<tr>
						<td> <%= serial.serialnum %> </td>
						<td> <%= serial.charityName %></td>
						<td> 
						<% if serial.status == 1 %>
							Active
						<% else %>
							Inactive
						<% end %>
						</td>
						<td style="text-align: right;"><%= link_to "View", serial, :class => "btn btn-info btn-sm" %> <%= link_to "Edit", edit_serial_path(serial.serialId), :class => "btn btn-info btn-sm" %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
			<div class="clearfix"></div>
		</div>
		<%= link_to "Create Serial", new_serial_path, :class => "btn btn-large btn-block btn-info"%>
		<%= button_to 'Back', home_path, :class => "btn btn-default btn-large btn-block" %>
	</div>
</div>
