<% provide(:title, 'Medication List') %>
<div class="block">
	<div class="grid">
		<div class="grid-title">
			<div class="pull-left">
				<div class="icon-title">
					<i class="icon-user"></i>
				</div>
				<span>Medications</span>
				<div class="clearfix"></div>
			</div>
			<div class="pull-right">
				<div class="clearfix"></div>
			</div>
			<div class="pull-right">
				<div class="icon-title">
					<%= link_to medications_path(format: "csv") do%> <i> Download CSV</i></a> <%end%>
				</div>
			</div>
			<div class="clearfix"></div>
		</div>
		<div class="grid-content overflow">
			<table class="table table-bordered table-mod-2" id="datatable_medication">
				<thead>
					<tr>
						<th class="hidden-mobile"> Medicine Name </th>
						<th class="hidden-mobile"> Expiration Date </th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @medications.each do |medication| %>
					<tr>
						<td class="hidden-mobile"> <%= medication.name %> </td>
						<td class="hidden-mobile"> <%= medication.expiration.to_s("%m/%d/%Y")%> </td>
						<td class="action-table"> <%= link_to "View", medication, :class => "btn btn-info btn-sm"%> <%= link_to "Edit", edit_medication_path(medication.medId), :class => "btn btn-info btn-sm" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<div class="clearfix"></div>
		</div>
		<%= link_to "Create Medication", new_medication_path, :class => "btn btn-large btn-block btn-info"%>
		<%= link_to 'Back', home_path, :class => "btn btn-default btn-large btn-block" %>
	</div>
</div>