<div class="block">

	<% provide(:title, 'Add Medication') %>
	<div class="grid">
		<div class="grid-title">
			<div class="pull-left">
				<div class="icon-title">
					<i class="icon-plus"></i>
				</div>
				<span>New Medication</span>
				<div class="clearfix"></div>
			</div>
			<div class="clearfix"></div>
		</div>
		<div class="grid-content">
			<%= form_for @medication, html: {role: "form"} do |f| %>
			<%= render 'shared/error_messages_med' %>
			<div class="grid-content overflow">
				<%= f.text_field :name , class: "form-control", :placeholder => 'Name of Medication' %>
			</div>
			<div class="grid-content overflow">
				<%= f.text_field :numContainers , class: "form-control", type: "number", :placeholder => 'Number of Containers' %>
			</div>
			<div class="grid-content overflow">
				<%= f.text_field :tabletsPerContainer , class: "form-control", type: "number", :placeholder => 'Tablets Per Container' %>
			</div>
			<div class="grid-content overflow">
				<%= f.text_field :doseOfTablets , class: "form-control", type: "number", :placeholder => 'Amount of Dose' %>
			</div>
			<div class="grid-content overflow">
				<%= f.text_field :expiration , class: "form-control", type: "date", :placeholder => 'Expiration' %>
			</div>
			<div class="grid-content overflow">
				<%= f.select :status, [['Active',1], ['Inactive',0]], class: "form-controller" %>
			</div>
			<div class="grid-content overflow">
				<%= f.text_area :notes , class: "form-control same-height-1", :placeholder => 'Notes' %>
			</div>

			<%= f.submit "Create New Medication", :class => "btn btn-large btn-block btn-info"%>
			<% end %>
		</div>
	</div>

</div>