<% provide(:title, 'All Cloud Users') %>
<div class="block">
    <div class="grid">
      
        <div class="grid-title">
         <div class="pull-left">
            <div class="icon-title"><i class="icon-user"></i></div>
            <span>Users</span> 
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>   
    </div>

    <div class="grid-content overflow">
      
      <table class="table table-bordered" id="datatable">
       <thead>
        <tr>
            <th> First Name </th>
            <th> Last Name </th>
            <th> User Type </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% (@users).each do |user| %>
        <tr>
            <td>
                <%=  user.firstName %>
            </td>
            <td>    
                <%= user.lastName %>
            </td>   
            <td>
                <%= type_of_user(user.userType) %>
            </td> 
            <td><%= link_to "View", user %></td>  
        </tr>
    </tbody>
    <% end %>    
</table>


<div class="clearfix"></div>
</div>

</div>
</div>