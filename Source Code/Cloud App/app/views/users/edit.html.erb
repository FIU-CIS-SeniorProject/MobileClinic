<% provide(:title, "Edit user") %> 
<%= render 'layouts/sidebar' %>
<div class="block">
  <div id="main" role="main">
    <div class="grid">
      <div class="grid-title">
        <div class="pull-left">
          <div class="icon-title"><i class="icon-edit"></i></div> 
          <span>Edit User</span> 
          <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>   
      </div>

      <div class="grid-content">
        <%= form_for(@user, :html => { :multipart => true }) do |f| %>
        <%= render 'shared/error_messages' %>
        <div class="formRow">
          <%= f.label :firstName, "First Name", class: "label-gray"%>
          <div class="formRight">
            <%= f.text_field :firstName, class: "span input" %>
          </div>
        </div>

        <div class="formRow">
          <%= f.label :lastName, "First Name", class: "label-gray"%>
          <div class="formRight">
            <%= f.text_field :lastName, class: "span input" %>
          </div>
        </div>

        <div class="formRow">
          <%= f.label :email, "First Name", class: "label-gray"%>
          <div class="formRight">
            <%= f.text_field :email, class: "span input" %>
          </div>
        </div>

        <div class="formRow">
          <%= f.label :status, class: "label-gray"%> 
          <div class="formRight">
           <%= f.select :status, [['active',1], ['inactive',0]], class: "span input"%>
         </div>
       </div>
       
       <div class="formRow">
        <%= f.label "Pictures" , class: "label-gray" %> 
          <div class="formRight">
            <%= f.file_field :avatar , class: "span input" %>
         </div>
      </div>
     
     <div class="formRow">
      <%- unless @user.new_record? || !@user.avatar? -%>
       <%= f.label(:delete_avatar, 'Delete photo') %>
     
      <div class="formRight">
        <div>
          <%= f.check_box(:delete_avatar) %>
       </div>
     </div>

    </div>
       <div class="formRow">
        <div class="formRight">
          <%= image_tag(@user.avatar.url(:medium) , :alt => 'Photo', :title => 'Current photo') %>
        </div>
    </div>
  <%- end -%>

  <%= f.submit "Save changes", :class => "btn btn-large btn-block btn-info"%>   

</div>
</div>

</div>
</div>
</div>

<% end %>
