<% provide(:title, "Edit user") %>
<div class="block">
	<div id="main" role="main">
		<div class="grid">
			<div class="grid-title">
				<div class="pull-left">
					<div class="icon-title">
						<i class="icon-edit"></i>
					</div>
					<span>Edit User</span>
					<div class="clearfix"></div>
				</div>
				<div class="clearfix"></div>
			</div>
			<div class="grid-content">
				<%= form_for(@user, :html => { :multipart => true, role: "form" }) do |f| %>
					<%= render 'shared/error_messages' %>
					<div class="formRow">
						<%= f.label :password, "Password", class: "label-gray"%>
						<div class="formRight">
							<%= f.password_field :password, class: "form-control", type: "password"%>
						</div>
					</div>
					<div class="formRow">
						<%= f.label :password_confirmation, "Password Confirmation", class: "label-gray"%>
						<div class="formRight">
							<%= f.password_field :password_confirmation, class: "form-control", type: "password" %>
						</div>
					</div>
					<%- if current_user.userType != 0-%>
					<div class="formRow">
						<%= f.label :question, "Security Question", class: "label-gray"%>
						<div class="formRight">
							<%= f.collection_select :question,Charity.where("charityid = ?",current_user.charityid),:charityid,:name, class: "form-control" %>
						</div>
					</div>
					<%- else -%>
					<div class="formRow">
						<%= f.label :question, "Security Question", class: "label-gray"%>
						<div class="formRight">
							<%= f.collection_select :question, Charity.all,:charityid,:name, class: "form-control" %>
						</div>
					</div>
					<%- end -%>
					<div class="formRow">
						<%= f.label :answer, "Security Answer", class: "label-gray"%>
						<div class="formRight">
							<%= f.text_field :answer, class: "form-control", type: "text" %>
						</div>
					</div>
					<%= f.submit "Save changes", :class => "btn btn-large btn-block btn-info" %>
					<%= link_to 'Back', @user, :class => "btn btn-large btn-block btn-default" %>
				<%- end -%>
			</div>
		</div>
	</div>
</div>