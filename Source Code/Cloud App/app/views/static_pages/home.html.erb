<div class="row-fluid"> 
	<!--visitor statistics-->
	<div class="gridmine span5">

		<div class="grid-title">
			<div class="pull-left">
				<div class="icon-title"><i class="icon-file"></i></div>
				<span>Visits Statistics</span> 
				<div class="clearfix"></div>
			</div>
			<div class="pull-right"> 
				<div class="icon-title"><a href="#"><i class="icon-refresh"></i></a></div>
				<div class="icon-title"><a href="#"><i class="icon-cog"></i></a></div>
			</div>
			<div class="clearfix"></div>   
		</div>

		<div class="grid-content overflow">
			<ul class="list-visitor">
				<li>
					Visits: 
					<span class="number">235</span>
				</li>
				<li>
					New Visits: 
					<span class="number"> 122 </span>
				</li>
				<li>
					Return Visits:
					<span class="number"> 113</span>
				</li>
				<!-- <li><span class="linecustom"><canvas style="display: inline-block; width: 100px; height: 26px; vertical-align: top;" width="100" height="26"></canvas></span> 
					Fastest Visit: <span class="number">35%</span>
				</li> -->
				
			</ul>
		</div>

	</div>
	<!--visitor statistics END-->

	<!--friends-->
	<div class="gridmine span5">

		<div class="grid-title">
			<div class="pull-left">
				<div class="icon-title"><i class="icon-user"></i></div>
				<span style="width: 250px;">Latest Updated Patient</span> 
				<div class="clearfix"></div>
			</div>
			<div class="pull-right"> 
				<div class="icon-title"><a href="#"><i class="icon-refresh"></i></a></div>
			</div>
			<div class="clearfix"></div>   
		</div>

  

		<div class="grid-content overflow">
			<div class="friends chat">
			<% @patients.each do |patient| %>
				<div class="friend">
					<%= image_tag patient.picture.url(:medium) , class: "f-avatar" %>
					<!-- <img src="images/avatar-11.png" alt="" class="f-avatar">
 -->					<div class="f-actions">
						<%= link_to "View", patient, class: "f-actions" %>
					</div>
					<div class="f-info">
						<div class="f-name"><%= patient.firstName%> <%= patient.familyName%></div>
						<div class="f-text"> <%= patient.villageName%> </div>
						<div class="f-text"> <%= patient.updated_at.to_formatted_s(:long_ordinal) %> </div>
					</div>
					<div class="clearfix"></div>
				</div>
				<% end%>
			</div>

			<div class="clearfix"></div>
		</div>

	</div>
	<!--friends END-->

</div>
</div>




