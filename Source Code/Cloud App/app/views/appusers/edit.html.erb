<% provide(:title, "Edit Application User") %> 
<%= render 'layouts/sidebar' %>
 <div class="block">
<div id="main" role="main">
  <div class="grid">
    <div class="grid-title">
      <div class="pull-left">
        <div class="icon-title"><i class="icon-edit"></i></div> 
        <span>Edit User</span> 
        <div class="clearfix"></div>
      </div>
      <div class="clearfix"></div>   
    </div>
    <div class="grid-content">
      <%= form_for @appuser, :html => { :multipart => true } do |f| %>
      <%= render 'shared/error_messages_appuser' %>
      <div class="formRow">
        <%= f.label :firstName, "First Name", class: "label-gray"%>
        <div class="formRight">
          <%= f.text_field :firstName, class: "span input" %>
        </div>
      </div>

      <div class="formRow">
        <%= f.label :lastName, "First Name", class: "label-gray"%>
        <div class="formRight">
          <%= f.text_field :lastName, class: "span input" %>
        </div>
      </div>

      <div class="formRow">
        <%= f.label :email, "First Name", class: "label-gray"%>
        <div class="formRight">
          <%= f.text_field :email, class: "span input" %>
        </div>
      </div>

      <div class="formRow">
        <%= f.label :userType, class: "label-gray"%> 
        <div class="formRight">
        <%= f.select :userType, [['Nurse',0], ['Doctor',1], ['Pharmacist',2], ['Application Admin',3]]%>
       </div>
     </div>
      <div class="formRow">
        <%= f.label :status, class: "label-gray"%> 
        <div class="formRight">
         <%= f.select :status, [['active',1], ['inactive',0]], class: "span input"%>
       </div>
     </div>
     <div class="formRow">
        <%= f.label "Pictures" , class: "label-gray" %> 
        <div class="formRight">
         <%= f.file_field :avatar , class: "span input" %>
       </div>
     </div>
    <div class="formRow">
        <%- unless @appuser.new_record? || !@appuser.avatar? -%>
        <div>
          <%= f.label(:delete_avatar, 'Delete photo') %>
          <%= image_tag(@appuser.avatar.url, :alt => 'Photo', :title => 'Current photo') %>
          <%= f.check_box(:delete_avatar) %>
        </div>
      <%- end -%>
     </div>
     <%= f.submit "Save changes", :class => "btn btn-large btn-block btn-info"%>   
     
   </div>
 </div>

</div>
</div>


<% end %>