<% provide(:title, 'Create Charity Organization') %>
 <div class="block">
<div class="block">
  <div class="grid">
    <div class="grid-title">
      <div class="pull-left">
        <div class="icon-title"><i class="icon-plus"></i></div> 
        <span>New Charity</span> 
        <div class="clearfix"></div>
      </div>
      <div class="clearfix"></div>   
    </div>
    <div class="grid-content">
      <%= form_for @charity, html: {role: "form"} do |f| %>
      <div class="grid-content overflow">
        <%= render 'shared/error_messages_charity' %>
        <%= f.text_field :name , class: "span input", :placeholder => 'Charity Name', :class => "form-control" %>
      </div>
      <div class="grid-content overflow">
        <%= f.select :status, [['Active',1], ['Inactive',0]], class: "form-controller" %>
      </div>
      <%= f.submit "Create Charity", :class => "btn btn-large btn-block btn-info"%> 
      <% end %>
    </div> 
  </div>
</div>
</div>