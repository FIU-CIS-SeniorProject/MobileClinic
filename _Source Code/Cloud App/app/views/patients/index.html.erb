<% provide(:title, 'All Patients') %>
<div class="block">
	<div class="grid">
		<div class="grid-title">
			<div class="pull-left">
				<div class="icon-title">
					<i class="icon-user"></i>
				</div>
				<span>Patients</span>
				<div class="clearfix"></div>
			</div>
			<div class="clearfix"></div>
		</div>
		<div class="grid-content overflow">
			<table class="table table-bordered table-mod-2" id="datatable_patients">
				<thead>
					<tr>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Villiage Name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @patients.each do |patient| %>
					<tr>
						<td><%= patient.firstName%></td>
						<td><%= patient.familyName%></td>
						<td><%= patient.villageName%></td>
						<td style="text-align: right;"><%= button_to "View", patient,:class => "btn btn-info btn-sm" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<div class="clearfix"></div>
		</div>
		<%= button_to 'Back', home_path, :class => "btn btn-default btn-large btn-block" %>
	</div>
</div>
